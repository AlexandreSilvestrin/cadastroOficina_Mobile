<Pesquisar>:
    GridLayout:
        rows: 8
        columns: 1
        spacing: 12

        canvas.before:
            Color:
                rgba: 0.13, 0.14, 0.17, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50

            Label:
                text: "Nome:"
                font_size: 16
                size_hint_x: None
                width: 70
                color: 0.82, 0.82, 0.82, 1
                halign: "right"

            TextInput:
                id: nometxt
                readonly: True
                font_size: 16
                size_hint_x: 1
                background_color: 0.23, 0.25, 0.3, 1
                foreground_color: 0.82, 0.82, 0.82, 1
                cursor_color: 0.82, 0.82, 0.82, 1
                cursor_width: 2
                border: (2, 2, 2, 2)
                border_radius: [15]
                padding: [10, 5]

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50

            Label:
                text: "Telefone:"
                font_size: 16
                size_hint_x: None
                width: 70
                color: 0.82, 0.82, 0.82, 1
                halign: "right"

            TextInput:
                id: telltxt
                readonly: True
                font_size: 16
                size_hint_x: 1
                background_color: 0.23, 0.25, 0.3, 1
                foreground_color: 0.82, 0.82, 0.82, 1
                cursor_color: 0.82, 0.82, 0.82, 1
                cursor_width: 2
                border: (2, 2, 2, 2)
                border_radius: [15]

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50

            Label:
                text: "Placa:"
                font_size: 16
                size_hint_x: None
                width: 70
                color: 0.82, 0.82, 0.82, 1
                halign: "right"

            TextInput:
                id: placatxt
                readonly: True
                font_size: 16
                size_hint_x: 1
                background_color: 0.23, 0.25, 0.3, 1
                foreground_color: 0.82, 0.82, 0.82, 1
                cursor_color: 0.82, 0.82, 0.82, 1
                cursor_width: 2
                border: (2, 2, 2, 2)
                border_radius: [15]
                padding: [10, 5]

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50

            Label:
                text: "Carro:"
                font_size: 16
                size_hint_x: None
                width: 70
                color: 0.82, 0.82, 0.82, 1
                halign: "right"

            TextInput:
                id: carrotxt
                readonly: True
                font_size: 16
                size_hint_x: 1
                background_color: 0.23, 0.25, 0.3, 1
                foreground_color: 0.82, 0.82, 0.82, 1
                cursor_color: 0.82, 0.82, 0.82, 1
                cursor_width: 2
                border: (2, 2, 2, 2)
                border_radius: [15]
                padding: [10, 5]

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50

            Label:
                text: "Data:"
                font_size: 16
                size_hint_x: None
                width: 70
                color: 0.82, 0.82, 0.82, 1
                halign: "right"

            TextInput:
                id: datatxt
                readonly: True
                font_size: 16
                size_hint_x: 1
                background_color: 0.23, 0.25, 0.3, 1
                foreground_color: 0.82, 0.82, 0.82, 1
                cursor_color: 0.82, 0.82, 0.82, 1
                cursor_width: 2
                border: (2, 4, 4, 2)
                border_radius: [15]
                padding: [10, 5]

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 200

            Label:
                text: "info:"
                font_size: 16
                size_hint_x: None
                width: 70
                color: 0.82, 0.82, 0.82, 1
                halign: "right"

            TextInput:
                id: infotxt
                readonly: True
                font_size: 16
                size_hint_x: 1
                background_color: 0.23, 0.25, 0.3, 1
                foreground_color: 0.82, 0.82, 0.82, 1
                cursor_color: 0.82, 0.82, 0.82, 1
                cursor_width: 2
                border: (2, 4, 4, 2)
                border_radius: [15]
                padding: [10, 5]

    BoxLayout:
        orientation: "horizontal"
        spacing: 10
        size_hint_y: None
        height: 50

        Button:
            text: 'Voltar'
            on_release: app.mudar_tela('cadastro', 'Cadastro de Clientes')

        Button:
            id: btn_slv_edt
            text: 'Editar'
            on_release: app.habilitar_edicao()

        Button:
            text: 'Apagar'
            on_release: app.excluirDados()